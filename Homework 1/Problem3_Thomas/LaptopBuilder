package HW1.Problem3;

public class LaptopBuilder {
    private static final double CUSTOM_PRICE = 800.0;
    private String name = "Custom Laptop";
    private String processor, ram, storage, graphics, os;

    public LaptopBuilder name(String v) { name = v; return this; }
    public LaptopBuilder processor(String v) { processor = v; return this; }
    public LaptopBuilder ram(String v) { ram = v; return this; }
    public LaptopBuilder storage(String v) { storage = v; return this; }
    public LaptopBuilder graphics(String v) { graphics = v; return this; }
    public LaptopBuilder os(String v) { os = v; return this; }

    public Laptop build() {
        return new Laptop(name, CUSTOM_PRICE, processor, ram, storage, graphics, os);
    }
}
