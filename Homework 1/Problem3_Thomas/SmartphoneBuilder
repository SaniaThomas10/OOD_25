package HW1.Problem3;

public class SmartphoneBuilder {
    private static final double CUSTOM_PRICE = 800.0;
    private String name = "Custom Smartphone";
    private String screen, processor, camera, battery, storage, os;

    public SmartphoneBuilder name(String v) { name = v; return this; }
    public SmartphoneBuilder screen(String v) { screen = v; return this; }
    public SmartphoneBuilder processor(String v) { processor = v; return this; }
    public SmartphoneBuilder camera(String v) { camera = v; return this; }
    public SmartphoneBuilder battery(String v) { battery = v; return this; }
    public SmartphoneBuilder storage(String v) { storage = v; return this; }
    public SmartphoneBuilder os(String v) { os = v; return this; }

    public Smartphone build() {
        return new Smartphone(name, CUSTOM_PRICE, screen, processor, camera, battery, storage, os);
    }
}
